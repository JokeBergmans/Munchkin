<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<fx:root fx:id="borderPane" prefHeight="500.0" prefWidth="300.0" type="BorderPane" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <Label fx:id="lblTitel" BorderPane.alignment="CENTER">
         <font>
            <Font size="23.0" />
         </font>
         <BorderPane.margin>
            <Insets bottom="10.0" top="10.0" />
         </BorderPane.margin></Label>
   </top>
   <center>
      <ListView fx:id="lvSpellen" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </center>
    <bottom>
    <HBox alignment="BOTTOM_CENTER" prefHeight="100.0" prefWidth="200.0" spacing="100.0" BorderPane.alignment="CENTER">
        <children>
            <Button fx:id="btnAnnuleer" alignment="CENTER" mnemonicParsing="false" onAction="#annuleren" prefWidth="75.0">
                <HBox.margin>
                    <Insets bottom="20.0" left="20.0" />
                </HBox.margin>
            </Button>
            <Button fx:id="btnBevestig" alignment="CENTER" mnemonicParsing="false" onAction="#bevestigen" prefWidth="75.0">
                <HBox.margin>
                    <Insets bottom="20.0" right="20.0" />
                </HBox.margin>
            </Button>
        </children>
    </HBox>
    </bottom>
    <stylesheets>
        <URL value="@stylesheet.css" />
    </stylesheets>
</fx:root>
